<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:orientation="vertical"
    tools:context=".ScaleChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/scale_ll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/scale_tv_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_16"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="@string/avg_weight_change"
            style="@style/Text.lg_accent_style"/>

        <include
            android:id="@+id/scale_chart_avg_weight"
            layout="@layout/include_combine_chart"/>

        <TextView
            android:id="@+id/scale_tv_df"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_16"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="@string/avg_weight_distribution"
            style="@style/Text.lg_accent_style"/>

        <include
            android:id="@+id/scale_chart_ndis"
            layout="@layout/include_combine_chart"/>

        <TextView
            android:id="@+id/scale_tv_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_16"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="@string/today_increase_weight"
            style="@style/Text.lg_accent_style"/>

        <include
            android:id="@+id/scale_chart_plus_weight"
            layout="@layout/include_combine_chart"/>

        <TextView
            android:id="@+id/scale_tv_dw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_16"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="@string/env_sensor_change"
            style="@style/Text.lg_accent_style"/>

        <include
            android:id="@+id/scale_chart_sensor"
            layout="@layout/include_combine_chart"/>

    </LinearLayout>

</ScrollView>