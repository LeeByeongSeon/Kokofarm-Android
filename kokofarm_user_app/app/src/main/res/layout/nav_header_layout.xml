<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pixel_150"
    android:theme="@style/Theme.Material3.Dark"
    android:orientation="vertical"
    android:paddingStart="@dimen/pixel_16"
    android:gravity="start|bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/pixel_16"
        android:orientation="horizontal"
        android:gravity="top|end">

        <ImageButton
            android:layout_width="@dimen/pixel_48"
            android:layout_height="@dimen/pixel_40"
            android:layout_marginEnd="@dimen/pixel_10"
            android:background="@android:color/transparent"
            android:src="@drawable/south_korea"
            android:scaleType="fitCenter"
            android:padding="0dp"/>

        <ImageButton
            android:layout_width="@dimen/pixel_48"
            android:layout_height="@dimen/pixel_40"
            android:layout_marginEnd="@dimen/pixel_16"
            android:background="@android:color/transparent"
            android:src="@drawable/united_states"
            android:scaleType="fitCenter"
            android:padding="0dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|bottom">

        <ImageView
            android:layout_width="@dimen/pixel_150"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pixel_10"
            android:src="@drawable/logo"/>

    </LinearLayout>

