<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".OutEnvironmentActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/env_dong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/pixel_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.005"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/env_cv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            app:cardElevation="@dimen/overlay_04"
            app:layout_constraintTop_toBottomOf="@+id/env_dong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01"
            app:cardCornerRadius="@dimen/pixel_10"
            app:contentPadding="@dimen/pixel_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/temp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="온도"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="20.4"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/pixel_10"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/humi"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="습도"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="59.0"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/nh3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="암모니아"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="-"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/pixel_10"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/h2s"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="황화수소"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="-"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/pm_10"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="미세먼지"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="-"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/pixel_10"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/pm_25"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="초미세먼지"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="좋음"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/wind_direction"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="풍향"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="남동"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/pixel_10"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/wind"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="풍속"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="1.1"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/pixel_35"
                        android:layout_height="@dimen/pixel_35"
                        android:layout_marginRight="@dimen/pixel_16"
                        android:src="@drawable/solar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="일사량"
                        style="@style/Text.md_regular_style"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pixel_2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_10"
                        android:layerType="software"
                        android:src="@drawable/dotted_line_horizontal_0_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="-"
                        style="@style/Text.md_regular_style"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/env_tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="오늘 외기환경 변화"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/env_cv_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/env_cc_to"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/env_tv_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"/>

        <TextView
            android:id="@+id/env_tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="일령별 외기환경 변화"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/env_cc_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/env_cc_do"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/env_tv_do"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>