<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_dong_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pixel_5"
    android:layout_marginHorizontal="@dimen/pixel_16"
    android:layout_marginBottom="@dimen/pixel_16"
    app:cardElevation="@dimen/overlay_04"
    app:cardCornerRadius="@dimen/pixel_10"
    app:contentPadding="@dimen/pixel_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/pixel_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/pixel_5">

                <ImageView
                    android:id="@+id/img_hen"
                    android:layout_width="@dimen/pixel_50"
                    android:layout_height="@dimen/pixel_50"
                    android:src="@drawable/hen_1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/pixel_10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_dong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/pixel_10"
                            android:text="1동"
                            style="@style/Text.md_medium_style"/>

                        <ImageView
                            android:id="@+id/img_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_oval_red"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11일령"
                        android:textSize="@dimen/pixel_18"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_feed"
                    android:layout_width="@dimen/pixel_50"
                    android:layout_height="@dimen/pixel_50"
                    android:src="@drawable/feed_3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/pixel_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_count"
                    android:textSize="@dimen/pixel_18"/>

                <TextView
                    android:id="@+id/tv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pixel_10"
                    android:text="30,000수"
                    android:textSize="@dimen/pixel_18"/>

                <ImageView
                    android:id="@+id/img_breed_note"
                    android:layout_width="@dimen/pixel_35"
                    android:layout_height="@dimen/pixel_35"
                    android:src="@drawable/ic_baseline_edit_note_24"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/avg_weight"
                    android:textSize="@dimen/pixel_18"/>

                <TextView
                    android:id="@+id/tv_avg_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1682.5g"
                    android:textColor="@color/darkRedColor"
                    style="@style/Text.md_medium_style"/>

            </LinearLayout>

            <!--                        <View-->
            <!--                            android:layout_width="match_parent"-->
            <!--                            android:layout_height="@dimen/pixel_1"-->
            <!--                            android:layout_marginVertical="@dimen/pixel_10"-->
            <!--                            android:background="@android:color/darker_gray"/>-->

            <ImageView
                android:id="@+id/img_dot_line"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pixel_2"
                android:layout_marginVertical="@dimen/pixel_16"
                android:layerType="software"
                android:src="@drawable/dotted_line_horizontal_0_1"/>

            <LinearLayout
                android:id="@+id/badge_error_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/pixel_10"
            android:layout_height="@dimen/pixel_10"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>