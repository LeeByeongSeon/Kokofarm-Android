<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".FeedChartFragment"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_tv_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_16"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="오늘 급이량 변화"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/feed_cc_tf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"/>

        <TextView
            android:id="@+id/feed_tv_df"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="일령별 급이량 변화"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/feed_cc_df"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"/>

        <TextView
            android:id="@+id/feed_tv_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="오늘 급수량 변화"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/feed_cc_tw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"/>

        <TextView
            android:id="@+id/feed_tv_dw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/pixel_16"
            android:text="일령별 급수량 변화"
            style="@style/Text.lg_accent_style"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/feed_cc_dw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pixel_300"
            android:layout_marginHorizontal="@dimen/pixel_16"
            style="@style/Text.lg_accent_style"/>

    </LinearLayout>

</ScrollView>