<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/breed_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/pixel_10"
        android:layout_marginHorizontal="@dimen/pixel_16"
        app:cardElevation="@dimen/overlay_04"
        app:cardCornerRadius="@dimen/pixel_10"
        app:contentPadding="@dimen/pixel_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- textView 수직 정렬을 위한 layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="다복농장-01동"
                        style="@style/Text.md_medium_style"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="출하 일령"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="30일령"
                        style="@style/Text.sm_regular_style"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/scale_lv_visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pixel_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입추일"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_in_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2022-12-31"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/secondaryColor"
                            style="@style/Text.sm_regular_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출하일"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_out_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="2021-01-13"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/secondaryColor"
                            style="@style/Text.sm_regular_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평균중량"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_avg_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="1625.5g"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/darkRedColor"
                            style="@style/Text.sm_regular_style"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>