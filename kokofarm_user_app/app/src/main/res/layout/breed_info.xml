        <LinearLayout
            android:id="@+id/lay_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/pixel_5"
                android:src="@drawable/icon_oval_light_grey" />

            <TextView
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/extra_count"
                android:textSize="@dimen/pixel_18" />

            <TextView
                android:id="@+id/tv_extra"
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0수"
                android:textSize="@dimen/pixel_18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_death"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/pixel_5"
                android:src="@drawable/icon_oval_light_grey" />

            <TextView
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/death_count"
                android:textSize="@dimen/pixel_18" />

            <TextView
                android:id="@+id/tv_death"
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0수"
                android:textSize="@dimen/pixel_18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_cull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pixel_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/pixel_5"
                android:src="@drawable/icon_oval_light_grey" />

            <TextView
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cull_count"
                android:textSize="@dimen/pixel_18" />

            <TextView
                android:id="@+id/tv_cull"
                style="@style/Text.md_regular_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0수"
                android:textSize="@dimen/pixel_18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_thinout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
