<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dong_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pixel_5"
    android:layout_marginHorizontal="@dimen/pixel_16"
    android:layout_marginBottom="@dimen/pixel_16"
    app:cardElevation="@dimen/overlay_04"
    app:cardCornerRadius="@dimen/pixel_10"
    app:contentPadding="@dimen/pixel_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/pixel_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/pixel_5">

                <ImageView
                    android:id="@+id/img_hen"
                    android:layout_width="@dimen/pixel_65"
                    android:layout_height="@dimen/pixel_65"
                    android:src="@drawable/hen3_g"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/pixel_10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_dong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/pixel_10"
                            android:text="1동"
                            style="@style/Text.md_medium_style"/>

                        <ImageView
                            android:id="@+id/img_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_oval_red"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11일령"
                        android:textSize="@dimen/pixel_18"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_weight"
                        style="@style/Text.md_regular_style"/>

                    <TextView
                        android:id="@+id/tv_avg_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - (kg)"
                        style="@style/Text.md_medium_style"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/solid_line_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/pixel_72"
                    android:layout_height="wrap_content"
                    android:text="@string/avg_temp_txt"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:layout_width="@dimen/pixel_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>


                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="@dimen/pixel_16"
                    android:textColor="@color/secondaryColor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/pixel_72"
                    android:layout_height="wrap_content"
                    android:text="@string/avg_humi_txt"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:layout_width="@dimen/pixel_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:id="@+id/tv_humi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:text="0.0"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/pixel_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/pixel_72"
                    android:layout_height="wrap_content"
                    android:text="@string/avg_co2_txt"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:layout_width="@dimen/pixel_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:id="@+id/tv_co2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:text="0.0"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/pixel_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/pixel_72"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/avg_nh3_txt"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:layout_width="@dimen/pixel_10"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/pixel_13"
                    style="@style/Text.md_regular_style"/>

                <TextView
                    android:id="@+id/tv_nh3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.0"
                    android:textSize="@dimen/pixel_16"
                    android:textColor="@color/secondaryColor" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_dot_line"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pixel_2"
                android:layout_marginVertical="@dimen/pixel_16"
                android:layerType="software"
                android:src="@drawable/dotted_line_horizontal_0_1"/>

            <LinearLayout
                android:id="@+id/badge_error_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cell_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/pixel_10"
            android:layout_height="@dimen/pixel_10"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>