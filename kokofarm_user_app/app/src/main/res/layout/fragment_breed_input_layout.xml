<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/breed_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pixel_10"
        android:layout_marginHorizontal="@dimen/pixel_16"
        app:cardElevation="@dimen/overlay_04"
        app:cardCornerRadius="@dimen/pixel_10"
        app:contentPadding="@dimen/pixel_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- textView 수직 정렬을 위한 layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="left"
                        android:includeFontPadding="false"
                        android:text="@string/breed_record_input"
                        style="@style/Text.lg_accent_style"/>

                    <TextView
                        android:id="@+id/tv_dong_name"
                        style="@style/Text.md_regular_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:text="드림농장 1동" />

                </LinearLayout>

<!--                <View-->
<!--                    style="@style/solid_line_horizontal"/>-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pixel_2"
                    android:layout_marginVertical="@dimen/pixel_10"
                    android:src="@drawable/dotted_line_horizontal_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/base_date"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/pixel_10"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="2023-01-10"
                            style="@style/Text.sm_regular_style"
                            android:textColor="@color/darkRedColor"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/breed_type"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/pixel_10"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:gravity="end"
                            android:text="육계"
                            style="@style/Text.sm_regular_style"
                            android:textColor="@color/darkRedColor"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pixel_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/feed_input_before_enter"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_already_feed"
                        android:inputType="number"
                        android:maxLength="6"
                        android:text="0"
                        android:layout_width="@dimen/pixel_100"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pixel_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/enter_count"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_in"
                        android:inputType="number"
                        android:maxLength="6"
                        android:text="0"
                        android:layout_width="@dimen/pixel_72"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/extra_count"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_extra"
                        android:inputType="number"
                        android:maxLength="6"
                        android:text="0"
                        android:layout_width="@dimen/pixel_72"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/scale_lv_visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pixel_30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_death_count"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_death"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/secondaryColor"
                            style="@style/Text.sm_regular_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_cull_count"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_cull"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/secondaryColor"
                            style="@style/Text.sm_regular_style"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/today_out_count"
                            android:textSize="@dimen/pixel_14"
                            style="@style/Text.sm_regular_style"/>

                        <TextView
                            android:id="@+id/tv_thinout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textSize="@dimen/pixel_14"
                            android:textColor="@color/secondaryColor"
                            style="@style/Text.sm_regular_style"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pixel_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/death_count"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_death"
                        android:layout_width="@dimen/pixel_100"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="0" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/cull_count"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_cull"
                        android:layout_width="@dimen/pixel_100"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="0"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/out_count"
                        style="@style/Text.sm_regular_style"/>

                    <TextView
                        android:layout_width="@dimen/pixel_10"
                        android:layout_height="wrap_content"
                        android:text=":"
                        style="@style/Text.sm_regular_style"/>

                    <EditText
                        android:id="@+id/et_thinout"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="0"
                        android:layout_width="@dimen/pixel_100"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pixel_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/breed_input_info_1"
                        style="@style/Text.sm_regular_style"
                        android:textColor="@color/darkRedColor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pixel_10"
                        android:includeFontPadding="false"
                        android:text="@string/breed_input_info_2"
                        style="@style/Text.sm_regular_style"
                        android:textColor="@color/darkRedColor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pixel_10">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_28"
                        android:backgroundTint="@color/darkRedColor"
                        android:text="@string/cancel_txt"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/pixel_28"
                        android:text="@string/save_txt"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>